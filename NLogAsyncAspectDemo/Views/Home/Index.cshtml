
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

</head>
<body>
    <div class="jumbotron">
        <div class="container">
            <form method="post" action="@Url.Action("Index", "Home")">
                <h1>Choose what to log:</h1>
                <div class="radio">
                    <label>
                        <input type="radio" name="LogOption" value="0" checked>
                        A method called with ILoggable object as a parameter
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="LogOption" value="1">
                        An awaitable method called with ILoggable object as a parameter and returning sample data
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="LogOption" value="2">
                        An awaitable method called with string, Guid, float, POCO and ILoggable objects as parameters
                    </label>
                </div>
                <button type="submit" class="btn btn-default">Log it!</button>
            </form>
        </div>
    </div>
    <div class="well well-lg" style="white-space:pre-line">
        @ViewBag.Log
    </div>
</body>
</html>
